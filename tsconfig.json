{
  "include": ["build.config.ts", "src",],
  "ts-node": {
  "esm": "true",
"experimentalSpecifierResolution":"node",
    "compilerOptions": {
	"module": "esnext",
	 "target": "esnext",
	"moduleResolution": "node",

    }
  },
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
	"noImplicitAny": false
  }
}

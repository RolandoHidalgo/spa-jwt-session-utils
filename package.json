{
  "name": "spa-jwt-session-utils",
  "version": "1.0.0",
  "description": "utils for jwt and session in spa",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
